<form method="post" action="{{ path('livre_delete', {'idLivre': livre.idLivre}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livre.idLivre) }}">
    <button class="btn btn-danger btn-sm">Supprimer</button>
</form>
