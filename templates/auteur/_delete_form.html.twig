<form method="post" action="{{ path('auteur_delete', {'idAuteur': auteur.idAuteur}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ auteur.idAuteur) }}">
    <button class="btn btn-danger btn-sm">Supprimer</button>
</form>
